<?xml version="1.0" encoding="UTF-8"?>
<mvc-config>
	<data-sources>
		<data-source type="org.apache.commons.dbcp.BasicDataSource">
			<property name="driverClassName" value="com.mysql.jdbc.Driver"></property>
			<property name="url" value="jdbc:mysql://localhost:3306/scblog?useUnicode=true&amp;characterEncoding=utf-8"></property>
			<property name="username" value="root"></property>
			<property name="password" value="kingdee"></property>
			<property name="loginTimeout" value="100"></property>
			<property name="initialSize" value="3"></property>
		</data-source>
	</data-sources>
	<action-mapping>
		<action class="com.sc.auth.action.LoginAction" path="/login">
			<forward value="success" path="./index.jsp"/>
			<forward value="failure" path="./login.jsp"/>
		</action>
		<action class="com.sc.auth.action.ExcsqlAction" path="/excSql">
			<forward value="success" path="./index.jsp"/>
			<forward value="failure" path="./index.jsp"/>
		</action>
	</action-mapping>
</mvc-config>